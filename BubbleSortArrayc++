#include<iostream.h>
#include<stdio.h>
class List
{
public:
int arr[20];
int n;
void read()
{
while(1)
{
cout<<"\nEnter the number of elements in the array:";
cin>>n; 
if (n<=20)
break; 
else
cout<<"\nArray can have maximum 20 elements\n";
cout<<"\n";
cout<<"-----------------------\n";
cout<<"Enter array elements. \n ";
cout<<"-----------------------\n";
for(int i=0; i<n;i++) 
{
cout<<"<"<<i+1<<"> ";
cin>>arr[i];
}
}
void BubbleSortArray()
{ 
for(int i=1; i <n ; i++)
{
for( int j=0;j<n-I;j++)
{
if(arr[j]>arr[j+1])
{
int temp; 
temp = arr[j];
arr[j]=arr[j+1]; 
arr[j+1]=temp; 
}
}
}
}
void display () 
{ 
cout<<endl; 
cout <<"-------------------\n";
cout <<"Sorted array elements \n";
cout <<"---------------------\n";
for(int j=0;j<n;j++) 
{ 
cout<<arr[j]<<endl; 
} 
cout<<endl<<"Press Return to exit."; 
getchar(); 
} 
}; 

void main () 
List myList; 
myList.read();
myList.BubbleSortArray();
myList.display();
} 
